            @*@Html.LabelFor(model => model.Pays, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-offset-2 col-md-4">
                @*  @Html.EditorFor(model => model.Pays, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pays, "", new { @class = "text-danger" })*@

                <select name="Pays" id="Endois">
                    <option value="1">Belgique</option>
                    <option value="2">France</option>
                    <option value="3">Italie</option>
                    <option value="4">Pays-Bas</option>
                    <option value="5">Luxembourg</option>
                    <option value="6">Australie</option>
                    <option value="7">USA</option>
                    <option value="8">Anglettere</option>
                    <option value="9">Espagne</option>
                    <option value="10">Portugal</option>
                    <option value="11">Islande</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Creer" class="btn btn-default" />
                <hr />
            </div>
        </div>
    </div>
    @if (ViewBag.SuccessMessage != null)
    {
    @:<div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
    @:<div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
</form>
}



